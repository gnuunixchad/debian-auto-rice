# It is important that this file is edited as UTF-8.

general {
	output_format = "i3bar"
    colors = true
    interval = 5
	color_good = "#eeeeee"
	color_degraded = "#777777"
	color_bad = "#777777"
}

order += "ethernet _first_"
order += "wireless _first_"
order += "disk /"
order += "memory"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "battery all"
order += "volume master"
order += "tztime local"

ethernet _first_ {
    format_up = "[E]"
    format_down = "[E]"
	color_degraded = "#eeeeee"
    separator = false
    separator_block_width = 7
}

wireless _first_ {
    format_up = "[W%quality]"
    format_down = "[W]"
    format_quality="% 02d%s"
	color_degraded = "#eeeeee"
    separator = false
    separator_block_width = 7
}

disk / {
	format = "[/ %percentage_used]"
    color_bad = "#eeeeee"
    color_degraded = "#eeeeee"
    separator = false
    separator_block_width = 7
}

cpu_usage {
	format = "[CPU %usage "
	separator = false
	separator_block_width = 1
	color_bad = "#eeeeee"
	color_degraded = "#eeeeee"
}

cpu_temperature 0 {
	format = "%degreesÂ°C]"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon*/temp1_input"
    color_bad = "#eeeeee"
    color_degraded = "#eeeeee"
    separator = false
    separator_block_width = 7
}

memory {
    format = "[MEM %percentage_used]"
	color_bad = "#eeeeee"
	color_degraded = "#eeeeee"
    separator = false
    separator_block_width = 7
}

battery all {
    format = "[%status %percentage]"
	integer_battery_capacity = true
	last_full_capacity = true
	status_chr = "CHR"
	status_bat = "BAT"
	status_full = "FUL"
	Status_unk = "UNK"
	low_threshold = 30
    threshold_type = percentage
	color_bad = "#eeeeee"
	color_degraded = "#eeeeee"
    separator = false
    separator_block_width = 7
}

volume master {
	format = "[VOL %volume]"
	format_muted = "[VOL %volume]"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
    separator = false
    separator_block_width = 7
}

tztime local {
	format = "[%b-%d %a %H:%M]"
    separator = false
    separator_block_width = 7
}
